<div class="container-fluid signup">
  <div class="row">
    <div class="col-md-6 left">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <%= image_tag 'logo.png', width: 150 %>
      <hr>
      <%= devise_error_messages! %>
      <%= render 'layouts/message' %>
      <div class="form-group required">
        <%= f.label :company_name, class: 'control-label' %>
        <%= f.text_field :company, :autofocus => true, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :contact_name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, class: 'form-control', requried: true %>
      </div>      
      <div class="form-group required">
        <%= f.label :phone, class: 'control-label' %>
        <%= f.text_field :phone, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :warehouse_location, class: 'control-label' %>
        <%= f.text_field :warehouse_location, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :password, class: 'control-label' %>
        <%= f.password_field :password, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :password_confirmation, class: 'control-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control', requried: true %>
      </div>
      <hr>
      <%= f.submit 'Sign up', :class => 'btn btn-primary btn-block btn-lg' %>
      <% end %>
    </div>
    <div class="col-md-6 right">
    	<div>
    		<h1><b>Create Your Account</b></h1>
    		<h4>Easily get third party logistic requests from companies</h4>
    	</div>
    </div>
  </div>
</div>