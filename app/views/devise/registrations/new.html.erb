<br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <h3><b>Create your account</b></h3>
      <hr>
      <%= devise_error_messages! %>
      <%= render 'layouts/message' %>
      <div class="form-group required">
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, :autofocus => true, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :company, class: 'control-label' %>
        <%= f.text_field :company, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :phone, class: 'control-label' %>
        <%= f.text_field :phone, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :warehouse_location, class: 'control-label' %>
        <%= f.text_field :warehouse_location, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :password, class: 'control-label' %>
        <%= f.password_field :password, class: 'form-control', requried: true %>
      </div>
      <div class="form-group required">
        <%= f.label :password_confirmation, class: 'control-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control', requried: true %>
      </div>
      <hr>
      <%= f.submit 'Sign up', :class => 'btn btn-primary right' %>
      <% end %>
    </div>
  </div>
</div>