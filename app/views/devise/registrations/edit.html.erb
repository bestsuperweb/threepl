<br><br>
<div class="text-center">
	<%= image_tag 'logo.png', width: 130 %>
</div>
<hr>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h3>Edit Profile</h3>
			<hr>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
			<%= devise_error_messages! %>
			<%= render 'layouts/message' %>
			<div class="form-group required">
				<%= f.label :company_name, class: 'control-label' %>
				<%= f.text_field :company, :autofocus => true, class: 'form-control', requried: true %>
			</div>
			<div class="form-group required">
				<%= f.label :contact_name, class: 'control-label' %>
				<%= f.text_field :name, class: 'form-control', requried: true %>
			</div>
			<div class="form-group required">
				<%= f.label :email, class: 'control-label' %>
				<%= f.email_field :email, class: 'form-control', requried: true %>
				<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
					<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
				<% end %>
			</div>
			<div class="form-group required">
				<%= f.label :phone, class: 'control-label' %>
				<%= f.text_field :phone, class: 'form-control', requried: true %>
			</div>
			<p class="text-muted">Leave these fields blank if you don't want to change your password.</p>
			<div class="form-group">
				<%= f.label :password, class: 'control-label' %>
				<%= f.password_field :password, :autocomplete => 'off', class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :password_confirmation, class: 'control-label' %>
				<%= f.password_field :password_confirmation, class: 'form-control' %>
			</div>
			<p class="text-muted">You must enter your current password to make changes.</p>
			<div class="form-group required">
				<%= f.label :current_password, class: 'control-label' %>
				<%= f.password_field :current_password, class: 'form-control', requried: true %>
			</div>
			<%= f.submit 'Update', :class => 'btn btn-primary right' %>
			<%= link_to "Cancel", dashboard_path, :class=> 'btn btn-default' %>
			<% end %>
		</div>
		<div class="authform">
			<h4>Cancel Account</h4>
			<b class="text-muted">Unhappy? We'll be sad to see you go.</b><hr>
			<%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-default right' %>
		</div>
	</div>
	<br><br><br>
</div>
