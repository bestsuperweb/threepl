<%= render 'layouts/header' %>
<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<h3 class="text-info"><b>Create New Quote</b></h3>
			<hr>
			<%= form_for :quote, url: create_quote_path do |f| %>
				<%= f.hidden_field :user_id, value: current_user.id %>
				<%= f.hidden_field :email_id, value: @email.id %>
				<%= f.hidden_field :shop_id, value: @email.shop.id %>
				<div class="form-group required">
					<label class="control-label">Pick and Pack Fee </label>	
					<%= f.number_field :pp_fee, class: 'form-control', 'step': 0.01 %>
				</div>
				<div class="form-group required">
					<label class="control-label">Storage Cost $x/ per month/ per cubic foot:</label>
					<%= f.number_field :storage_cost, class: 'form-control', 'step': 0.01 %>
				</div>
				<div class="form-group required">
					<label class="control-label">International Processing Fee</label>
					<%= f.number_field :international_fee, class: 'form-control', 'step': 0.01 %>
				</div>
				<div class="form-group required">
					<label class="control-label">Shipping Options: Time and Cost</label>
					<%= f.text_field :shipping_option, class: 'form-control' %>
				</div>
				<div class="form-group required">
					<label class="control-label">Warehousing Options: Time and Cost</label>
					<%= f.text_field :warehousing_option, class: 'form-control' %>
				</div>				
				<hr>
				<div class="form-group">
					<%= f.submit 'Send Quote', class: 'btn btn-primary' %>
				</div>
			<% end %>
			<br><br>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>