<div class="container-fluid" id="admin-panel">

	<div class="tab-content">
	  <div class="tab-pane fade in active">
	  	<br><br><br>
	    <div class="row">
				<div class="col-md-12">
					<div class="card auto-height">
						<div class="row">

							<div class="col-sm-4">
								<div class="row">
									<div class="col-xs-3">
										<%= image_tag 'request.png', width: '50' %>
									</div>
									<div class="col-xs-8">
										<b class="text-muted">REQUEST:</b><br>
										<h4><%= @email.products.first.title %></h4>
									</div>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="row">
									<div class="col-xs-3">
										<%= image_tag 'partner.png', width: '50' %>
									</div>
									<div class="col-xs-8">
										<b class="text-muted">PARTNER:</b><br>
										<h4><%= @email.user.company %></h4>
									</div>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="row">
									<b class="text-muted">DATE:</b><br>
									<H5><%= @email.created_at %></H5>
								</div>
							</div>

						</div>						
					</div>
					<br>

					<div class="card">
						<h4>Products</h4><br>
						<table class="table">
							<thead>
								<tr>
									<th>Image</th>
									<th>Title</th>
									<th>Weight (KG)</th>
									<th>Width (mm)</th>
									<th>Height (mm)</th>
									<th>Length (mm)</th>
									<th>Has Battery?</th>
									<th>Shipping Volume</th>
									<th>Order Quantity</th>
									<th>Special Notes</th>
								</tr>
							</thead>
							<tbody>
								<% @email.products.each do |product| %>
								<tr>
									<td><img src="<%= product.image %>" width="100"></td>
									<td><%= product.title %></td>									
									<td><%= product.weight %></td>									
									<td><%= product.width %></td>
									<td><%= product.height %></td>
									<td><%= product.length %></td>
									<td><%= product.has_battery %></td>
									<td><%= product.shipping_volume %></td>
									<td><%= product.order_quantity %></td>
									<td><%= product.notes %></td>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
					<br>

					<% unless @quote.nil? %>

					<div class="card">
						<h4>Pick and Pack Fees</h4><br>
							<table class="table quote-table">
								<tr>
									<td width="30%"><%= image_tag 'units.png' %> <b>Units</b></td>
									<td>1-50</td>
									<td>51-250</td>
									<td>251-2500</td>
									<td>2501-5000</td>
									<td>5001+</td>
								</tr>
								<tr>
									<td>First Unit</td>
									<td>
										<%= @quote.first_unit1 %>
									</td>
									<td>
										<%= @quote.first_unit2 %>
									</td>
									<td>
										<%= @quote.first_unit3 %>
									</td>
									<td>
										<%= @quote.first_unit4 %>
									</td>
									<td>
										<%= @quote.first_unit5 %>
									</td>
								</tr>
								<tr>
									<td>Additional</td>
									<td>
										<%= @quote.additional1 %>
									</td>
									<td>
										<%= @quote.additional2 %>
									</td>
									<td>
										<%= @quote.additional3 %>
									</td>
									<td>
										<%= @quote.additional4 %>
									</td>
									<td>
										<%= @quote.additional5 %>
									</td>
								</tr>
								<tr>
									<td>Packaging cost<br><small class="text-muted">if added</small></td>
									<td>
										<%= @quote.packaging_cost1 %>
									</td>
									<td>
										<%= @quote.packaging_cost2 %>
									</td>
									<td>
										<%= @quote.packaging_cost3 %>
									</td>
									<td>
										<%= @quote.packaging_cost4 %>
									</td>
									<td>
										<%= @quote.packaging_cost5 %>
									</td>
								</tr>
								<tr class="border">
									<td><b>Total</b></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
								</tr>
								<tr class="border">
									<td width="30%">
										<%= image_tag 'storage_costs.png' %> 
										<b>Storage Cost</b> <br><small class="text-muted">$x/ per month/ cubic foot</small>
									</td>
									<td>
										<%= @quote.storage_cost1 %>
									</td>
									<td>
										<%= @quote.storage_cost2 %>
									</td>
									<td>
										<%= @quote.storage_cost3 %>
									</td>
									<td>
										<%= @quote.storage_cost4 %>
									</td>
									<td>
										<%= @quote.storage_cost5 %>
									</td>
								</tr>
								<tr class="border">
									<td width="30%">
										<%= image_tag 'international_fees.png' %> 
										<b>International Processing Fee</b>
									</td>
									<td>
										<%= @quote.international_fee1 %>
									</td>
									<td>
										<%= @quote.international_fee2 %>
									</td>
									<td>
										<%= @quote.international_fee3 %>
									</td>
									<td>
										<%= @quote.international_fee4 %>
									</td>
									<td>
										<%= @quote.international_fee5 %>
									</td>
								</tr>
								<tr class="border">
									<td width="30%">
