										<2days Fedex Air
									</td>
								</tr>

								<% @quote.shipping_options.each do |option| %>
									<tr>
										<td><%= option.product.title %></td>
										<td>
											<%= option.shipping_option1 %>
										</td>
										<td>
											<%= option.shipping_option2 %>
										</td>
										<td>
											<%= option.shipping_option3 %>
										</td>
										<td>
											<%= option.shipping_option4 %>
										</td>
										<td>
											<%= option.shipping_option5 %>
										</td>
									</tr>
									<% end %>								

								<tr class="border">
									<td width="30%">
										<%= image_tag 'warehouses.png' %> 
